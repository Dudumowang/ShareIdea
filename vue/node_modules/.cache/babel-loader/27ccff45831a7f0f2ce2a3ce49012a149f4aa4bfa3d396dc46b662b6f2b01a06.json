\n          :ishljs=\"true\"\r\n      />\r\n\r\n    </div>\r\n\r\n    <div style=\"margin: 30px 0\">\r\n\r\n      <div style=\"margin: 10px 0\">\r\n\r\n\r\n      <div style=\"border-bottom: 1px solid #bdc3c7; padding: 10px 0; font-size: 20px\">评论</div>\r\n\r\n      <div style=\"padding: 10px 0\">\r\n        <el-input type=\"textarea\" v-model=\"content\"  placeholder=\"请输入评论\" :rows=\"6\"></el-input>\r\n      </div>\r\n\r\n      <div style=\"padding: 10px 0; text-align: right\">\r\n        <el-button type=\"primary\" size=\"small\">评论</el-button>\r\n      </div>\r\n\r\n      </div>\r\n\r\n      <!-- 评论列表 -->\r\n      <div>\r\n        <div v-for=\"item in comments\" :key = \"item.id\" style=\"border-bottom: 1px solid #ccc; padding: 10px 0; display: flex\">\r\n\r\n          <div style=\"width:100px; text-align: center\">\r\n\r\n            <el-image :src=\"item.avatarUrl\" style=\"width: 50px; height: 50px; border-radius: 50%\"></el-image>\r\n\r\n          </div>\r\n\r\n          <div style=\"flex:1; font-size: 14px; padding: 5px 0; line-height: 25px\">\r\n            <b> {{ item.username }} :</b>\r\n            <span> {{ item.content }}</span>\r\n            <div style=\"text-align: right\">\r\n              <i class=\"el-icon-time\" style=\"margin-right: 10px\"></i><span>{{item.pubTime}}</span>\r\n            </div>\r\n\r\n          </div>\r\n        </div>\r\n      </div>\r\n\r\n\r\n    </div>\r\n\r\n\r\n\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: \"IdeaDetail\",\r\n  data(){\r\n    return {\r\n      idea : {},\r\n      content : \"\",\r\n      commentForm:{},\r\n    }\r\n  },\r\n  created() {\r\n    this.load();\r\n    this.loadComment()\r\n  },\r\n  methods : {\r\n\r\n    load(){\r\n\r\n      const id = this.$route.query.id\r\n      this.request.get(\"http://localhost:9090/idea/\" + id)\r\n          .then(res=>{\r\n        if(res.code==='200'){\r\n          this.idea=res.data;\r\n        }\r\n        else{\r\n          this.$message.error('获取创意详情失败！');\r\n        }\r\n      })\r\n\r\n    },\r\n\r\n    loadComment() {\r\n      const id = this.$route.query.id\r\n      this.request.get(\"http://localhost:9090/comment/tree/\" + id)\r\n          .then(res => {\r\n            this.comments = res.data\r\n          })\r\n    }\r\n\r\n\r\n  }\r\n}\r\n</script>\r\n\r\n<style>\r\n.headerBg {\r\n  background: #eee!important;\r\n}\r\n</style>"]},"metadata":{},"sourceType":"module","externalDependencies":[]}